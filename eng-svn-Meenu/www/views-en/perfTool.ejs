	<script>
 document.getElementById("perfplots").onmouseover = function() {mouseOver()};

 function mouseOver(){
  var elem = document.getElementById("myBar");   
  var width = 0;
  var id = setInterval(frame, 0.1);
  function frame() {
    if (width == 95) {
      clearInterval(id);
    } else {
      width++; 
	var i = 0;
      elem.style.width = width + '%'; 
	while ( i < 1000){
	i=i+1;
	}
	var start = new Date().getTime();
	for (var i = 0; i < 1e7; i++) {
		if ((new Date().getTime() - start) > 1000){
			break;
		}
	}
    }
  }
}
</script>
